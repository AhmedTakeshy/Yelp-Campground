<% layout("/layouts/boilerplate") %>
    <link rel="stylesheet" href="/css/backgroundImageReg.css">

    <div class="container d-flex justify-content-start align-items-center mt-5">
        <div class="row">
            <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
                <div class="card bg-transparent ">
                    <div class="card-body text-white-50" style="width: 20rem;">
                        <h5 class="card-title">Register</h5>
                        <form action="/register" method="post" class="validated-form" novalidate>
                            <div class="mb-3">
                                <label class="form-label" for="username">Username</label>
                                <input class="form-control" type="text" id="username" name="username" autofocus required>
                                <div class="valid-feedback">
                                    Looks good!
                                </div>
                                <div class="invalid-feedback">
                                    Please enter a username.
                                </div>
                            </div>
                            <div class="mb-3">
                                <label class="form-label" for="email">Email</label>
                                <input class="form-control" type="text" id="email" name="email" required>
                                <div class="valid-feedback">
                                    Looks good!
                                </div>
                                <div class="invalid-feedback">
                                    Please enter an email.
                                </div>
                            </div>
                            <div class="mb-3">
                                <label class="form-label" for="password">Password</label>
                                <input class="form-control" type="password" id="password" name="password" required>
                                <div class="valid-feedback">
                                    Looks good!
                                </div>
                                <div class="invalid-feedback">
                                    Please enter a password.
                                </div>
                            </div>
                            <button class="btn btn-success col-12 mb-3">Sign Up</button>
                            <a class="btn btn-block btn-social btn-google col-12" href="/auth/google">
                                <span class="fa fa-google"></span> Sign Up with Google
                            </a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

